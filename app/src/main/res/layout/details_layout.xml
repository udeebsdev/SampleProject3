<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.app.DetailsActivity">
<TextView android:id="@+id/detail1_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name"
    android:padding="6dp"
    android:layout_marginTop="54dp"
    android:layout_below="@+id/backButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:onClick="backButtonClicked"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editButton"
        android:onClick="editClicked"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/detailName"
        android:layout_alignEnd="@+id/detailName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="detailName"
        android:id="@+id/detailName"
        android:layout_alignBottom="@+id/detail1_label"
        android:layout_toRightOf="@+id/backButton" />

</RelativeLayout>